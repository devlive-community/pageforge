<!-- 页面容器 -->
<div class="relative lg:flex lg:gap-8">
    <!-- 主要内容区域 -->
    <div class="min-w-0 flex-1">
        <!-- 页面标题部分 -->
        <div class="mb-3">
            <% if (page.title) { %>
                <h1 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-gray-100 sm:text-3xl lg:text-3xl">
                    <%- page.title %>
                </h1>
                <% if (page.description) { %>
                    <p class="mt-4 text-lg text-gray-600 dark:text-gray-400">
                        <%- page.description %>
                    </p>
                <% } %>
            <% } %>
        </div>

        <!-- 分隔线 -->
        <div class="h-px bg-gradient-to-r from-gray-200 via-gray-300 to-gray-200 dark:from-gray-700 dark:via-gray-600 dark:to-gray-700 mb-8"></div>

        <!-- 主要内容部分 -->
        <div class="prose prose-gray dark:prose-invert max-w-none">
            <%- content %>
        </div>
    </div>
</div>